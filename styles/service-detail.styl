.service-slider-item
  position relative
  min-width 210px
  max-width 210px
  img
    display: block
    object-fit: cover
    width: 100%
  &__info
    width 100%
    position absolute
    padding 10px 7px
    bottom 0
    height: 65px
    line-height: 14px;
    font-size: 14px;
    color: #ffffff;
    font-weight 500
    background-color rgba(94, 61, 85, 0.9)
    .name
      font-family: 'Roboto', sans-serif;
      font-weight 500
    .location
      font-family: 'Roboto', sans-serif;
      font-weight 500
      margin-top: 3px
      opacity: 0.5;
      color: #ffffff;
      font-size: 13px;
      i
        margin-right: 5px
  @media (max-width 400px)
    &__info
      .location
          display: none

//popular
.popular-services
  margin-top: 140px
  @media (max-width 768px)
    margin-top: 80px
  .service-slider
    .service-slider-item
      max-width 100%
      min-width auto
      @media (max-width 415px)
        max-height 300px
    @media (max-width 415px)
      margin 0 auto

  .slick-slide
    outline: none
    margin: 0 10px

  .slick-slider
    margin: 0 -15px
  .slick-prev
    left: -5px
    i
      transform: rotate(180deg)

  .slick-next
    right: -5px;
  .slick-disabled {
    opacity: 0;
  }
  .slick-arrow
    cursor: pointer;
    border-radius: 50%;
    background-color: #fff;
    box-shadow: 0 1px 7px rgba(0, 0, 0, 0.1);
    border: 1px solid #e1e2e6;
    position: absolute;
    top: 40%;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    outline: none;
    color: #5e3d55;
    z-index: 2;

//top-freelancers
.top-freelancers
  margin: 150px 0 240px
  position relative
  @media (max-width 530px)
    margin 75px 0 90px
  &__item
    margin-top: 65px
    .location
      font-family: 'Roboto', sans-serif;
      font-weight 500
      i
        color: #ff8a00
        opacity: 0.5
        margin-right: 10px
        font-size 18px
      span
        opacity: 0.5
        color: #000000
        font-family: Roboto
        font-size: 20px
        font-weight: 400
    @media screen and (max-width: 768px)
      margin-top: 30px

  &__img
    position relative
    img
      display: block
      width 100%
      height 100%
      max-width: 355px
      max-height: 325px
      object-fit cover
      @media (max-width 768px)
        margin 0 auto
    .mob-btn
      display: none
      @media (max-width 768px)
        display: block
        position absolute
        top 65%
        left 50%
        transform: translate(-50%, 0)
        min-height 50px
        border 1px solid #fff
  .white-block
    position relative
    width 90%
    margin-left auto
    padding 60px 55px 50px
    box-shadow: -1px 4px 18px rgba(0, 0, 0, 0.03);
    background-color: #ffffff;
    z-index 2
    @media (max-width 768px)
      width 100%
      margin-left: 0
      padding 0;
      box-shadow none

  .brown-block
    position absolute
    top 180px
    width 90%
    background-color: #f2eded
    height 600px
    padding 10px 85px
    z-index 1
    @media screen and (max-width: 1020px)
      top auto
      bottom -120px
    @media (max-width 768px)
      position relative
      top 0
      width 100%
      margin 0 auto
      padding 20px 40px
      height auto
      >.columns
        flex-wrap wrap

