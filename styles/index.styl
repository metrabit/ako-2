a
  color: #214099
a,
button,
svg
  transition all 0.2s

.button-icon
  cursor: pointer
  display: inline-flex
  box-shadow: none
  border: none
  outline: none
  background: none

.button
  border-radius: 10px
  min-height 60px
  outline none
  padding 0 30px
  font-family: 'Sofia Pro';
  &_lp
    width: 195px;
    min-height 55px
  &_pr
    color #fff
    background-color: $dirty-purple
    border 1px solid transparent
    padding: 0 30px
    &:hover,
    &:focus
      color #fff
      border: solid 1px $dirty-purple
      background: #3e293a;
  &_pr-small
    border-radius: 20px
    min-height 40px
    text-transform uppercase
  &_white
    color $dirty-purple
    background-color #fff
    border 1px solid #fff
    &:hover
      color #fff
      background-color $dirty-purple
  &_tr
    color $dirty-purple
    border 1px solid $dirty-purple
    background-color transparent
    &:hover,
    &:focus
      color #fff
      background-color: #3e293a;
      border: solid 1px #3e293a

  &_book
    color $dirty-purple
    font-weight 700
    margin-left: 5px
    padding 0 20px
    min-height 30px
    &:hover,
    &:focus
      background: #eaeaea
  &_tab
    width 100%
    border-radius: 5px;
    border: 1px solid #e4e4e4
    background-color: #ffffff
    &.active
      color #fff
      background-color: $dirty-purple
  &_price
    color $dirty-purple
    background-color #ffffff
    font-size: 20px;
    &:hover,
    &:focus
      background: #eaeaea
  &_golden
    color #ffffff
    border 1px solid #fefda7
    background-image: linear-gradient(to left, #fdcc19 0%, rgb(247, 227, 191) 17%, #e6bf38 51%, #b08920 96%, #b08920 100%);
  &_dash
    min-height 50px
    border-radius 0
    &.active
      color #000
      box-shadow: -1px 9px 10px rgba(0, 0, 0, 0.07);
      border: 2px solid #5e3d55;
      background-color: #ffffff;
  &_featured
    font-family: 'Roboto', sans-serif;
    color: #88898C
    border none
    text-align: left
    background-color transparent
    &.active
      color $dirty-purple
    @media (max-width 530px)
      padding 0 5px
  &_green
    display inline-flex
    align-items center
    justify-content center
    color #FFFFFF
    background-color: #4baf4f
    font-size: 16px
    text-transform: uppercase
    min-height 60px
    padding 0 50px
    border-radius: 30px
    border transparent
    &_sm
      min-height: 40px
      line-height: 45px
    &:hover,
    &:focus
      color #fff
      background-color: darken(#4baf4f, 25%);
      border transparent

  &_pink
    color: #5e3d55
    font-size: 16px
    font-weight: 400
    min-height 40px
    border-radius: 20px
    background-color: #e9d4e6
    &:hover
      border-color darken(#5e3d55, 50%)
  &_inverse-purple
    color: #5e3d55
    font-size: 16px
    font-weight: 400
    min-height 40px
    border-radius: 20px
    background-color: transparent
    border: 2px solid #5e3d55
  &_small-purple
    min-height: 45px
    border-radius: 24px
    background-color: #583b53
    color: #ffffff
    font-size: 16px
    font-weight: 400
    padding: 0 30px
    &:active,
    &:focus,
    &:hover
      color #FFFFFF
      background-color lighten(#583b53, 30%)

