  padding 4px 10px
  border-radius: 4px
  background-color: #e4e4e4
  font-size: 14px
  font-weight: 400
.right-btn
  text-align right
  @media (max-width 768px)
    margin-top: 20px
    text-align center
.help-cont
  width 100%
  text-align center
  color: lighten(#333333, 50%)
  font-size 16px
  &_try
    max-width 270px
  &_payment
    padding 0 50px
    text-align center
  @media (max-width 415px)
    &_try
      margin 20px auto 0
//header
.header
  position fixed
  width 100%
  background-color transparent
  overflow hidden
  z-index 99

.header-top
  position: relative
  z-index: 9

  &__cont
    display: flex
    justify-content space-between
    align-items center
    margin 0 auto
    padding 5px 20px
    height 72px
    @media screen and (max-width 900px)
      padding 0 20px
    @media screen and (max-width 525px)
      height 72px
  &__logo
    img
      width: 100%;
      max-width: 70px;
  &__menu
    display: flex

  &__list
    display: flex
    li:not(:last-child)
      margin-right: 30px
    a
      font-weight 500
      font-size: 14px
      font-family: 'Sofia Pro';

//header tabs
.hidden-tab
  display: none
.bg-header
  background-color: rgba(35,28,33,.8);
  .header-top__list a
    color #fff
.white-logo
  display: none
.bg-header .logo
  display: none
.bg-header .white-logo
  display: block
.bg-header .btn-open-nav
  background-color #fff
  border-radius: 4px;
.header-top__cont_open .header-top__list a
  color: #6f5169
.header-top__cont_open .header-top__logo
  .logo
    display: block
  .white-logo
    display: none

.header-tabs
  overflow hidden
  padding 170px 0 0
  @media (max-width 768px)
    padding 110px 0 0
.tab-content
  &__img
    img
      display: block
      width 100%
      max-height 820px
      object-fit cover
    @media (max-width 768px)
      display: none



//popular
.popular
  margin-top: 140px
  @media (max-width 768px)
    margin-top: 80px
  @media (max-width 360px)
    .btn-sl
      display: none
  .popular-slider

    .profile-item
      max-width 100%
      min-width auto
      @media (max-width 415px)
        max-height 300px
    @media (max-width 415px)
      margin 0 auto

.slick-slide
  outline: none
  margin: 0 10px

.slick-slider
  margin: 0 -15px
.slick-prev
  left: -5px
  i
    transform: rotate(180deg)

.slick-next
  right: -5px;
.slick-disabled {
  opacity: 0;
}
.slick-arrow
  cursor: pointer;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 1px 7px rgba(0, 0, 0, 0.1);
  border: 1px solid #e1e2e6;
  position: absolute;
  top: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  outline: none;
  color: #5e3d55;
  z-index: 2;


//discover
.discover
  position relative
  margin-top: 90px
  .profile-item
    max-width: 100%;
    min-width: 1%;

.service

  &-title
    color #fff
    margin-top: 15px
    font-size: 24px
    font-weight: 700
    text-transform: uppercase

  &-txt
    color #fff
    margin-top: 15px
    font-size: 14px
    font-weight: 400
    line-height: 24px

  &-link
    display inline-block
    position relative
    color #fff
    margin-top: 25px
    font-size: 14px
    font-weight: 700
    line-height: 24px
    &:after
      content: ''
      display: inline-block;
      border: solid #fff;
      border-width: 0 2px 2px 0;
      margin-left: 5px;
      padding: 3px;
      transform: rotate(-45deg);
    &:hover
      color #dadada


@media (max-width 1120px)
  .service-txt
    display: none
@media (max-width 850px)
  .service-img
    display: none
  .service-title
    text-align center
    font-size 20px
  .service-link
    margin-top: 10px
    text-align center

@media (max-width 500px)
  .service-title
    text-align center
    font-size 18px
    line-height: 19px

