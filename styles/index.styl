.profiles
  padding-bottom: 130px
  @media (max-width 768px)
    padding-bottom: 60px
  &-items
    @media (max-width 500px)
      >.column
        width 100%
        display: flex
        justify-content: center
    @media (max-width 1440px)
      .column:nth-child(9),
      .column:nth-child(10)
        display: none
.profile-item
  position relative
  min-width 210px
  max-width 210px
  .main
    display: block
    object-fit: cover
    width: 100%
    max-height: 314px;
    @media (max-width 1471px)
      max-width: 100%
      max-height: 266px;
    @media (max-width 1279px)
      max-height: 218px;
    @media (max-width 939px)
