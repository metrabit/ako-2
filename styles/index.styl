.darker-bg
  position: relative;
  &:before
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition all 0.3s ease
    background-color: rgba(0,0,0,0.25);
  &_more
    &:before
      background-color: rgba(0,0,0,0.70);
.dark-link
